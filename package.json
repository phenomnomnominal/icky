{
  "name": "icky",
  "version": "0.0.1",
  "description": "Simple tool for tracking ickiness in a codebase",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Craig Spence <craigspence0@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/phenomnomnominal/icky"
  },
  "license": "MIT",
  "bin": {
    "icky": "./bin/icky.js"
  },
  "scripts": {
    "build": "npm run clean && npm run compile && npm run lint && npm run test",
    "clean": "rimraf dist && rimraf reports",
    "compile": "tsc",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "eslint src/**/*.ts",
    "lint:test": "eslint test/**/*.ts",
    "lint:fix": "npm run lint:src:fix && npm run lint:test",
    "lint:src:fix": "eslint src/**/*.ts --fix",
    "lint:test:fix": "eslint test/**/*.ts --fix",
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "bin"
  ],
  "devDependencies": {
    "@types/eslint": "^6.1.1",
    "@types/glob": "^7.1.1",
    "@types/graceful-fs": "^4.1.3",
    "@types/jest": "^24.0.18",
    "@types/minimist": "^1.2.0",
    "@types/node": "^12.11.2",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "glob": "^7.1.6",
    "graceful-fs": "^4.2.3",
    "minimist": "^1.2.0",
    "tslib": "^1.10.0"
  }
}
